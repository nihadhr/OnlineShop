
@{
    ViewData["Title"] = "ListOfCustomers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<ListOfCustomersVM>


<h1>Lista svih registrovanih korisnika</h1>

<div class="card-deck">
    @{ 
        if(Model.Any())
        {
            foreach(var c in Model)
            {
                <div class="card m-3">
                    <div class="card-header text-center text-danger">@c.Firstname @c.LastName</div>

                    <div class="card-body text-center">
                        <img class="card-img-top" src="~/images/USER.png" style="width:100px" />
                        <h4 class="text-danger">Id korisnika: @c.Id</h4>
                        <h4 class="text-primary">E-mail: @c.Email</h4>

                    </div>

                    <div class="card-footer text-center">
                        <a href="/Administration/UserDetails?id=@c.Id" class="btn btn-primary">Detalji</a>
                        <a href="/Administration/SetForAdmin?id=@c.Id" class="btn btn-danger">Postavi za admina</a>

                    </div>

                </div>


            }
        }




    }


</div>      